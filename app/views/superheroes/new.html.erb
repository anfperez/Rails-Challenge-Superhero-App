<h1> Add Superhero </h1>

<%= form_for :superhero, url: superheroes_path do |f| %>

    <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
    </p>

    <p>
    <%= f.label :super_name %> <br>
    <%= f.text_field :super_name %> 
    </p>

    <p>
    <%= f.label :superpower_name %> <br>
     <%= f.select :superpower_id, options_for_select(Superpower.all.collect { |superpower| [superpower.name, superpower.id]}), {}, class: 'form-control', include_blank: 'Please Select' %>
    </p>


    

    <p>
    <%= f.submit %>
    <p>
    <% end %>