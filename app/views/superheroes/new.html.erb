<h1> Add Superhero </h1>

<%= form_for :superhero, url: superheroes_path do |f| %>

    <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
    </p>

    <p>
    <%= f.label :super_name %> <br>
    <%= f.text_field :super_name %> 
    </p>

    <p>
    <%= f.label :superpower_id, "Superpower" %> <br>
    <%= collection_select(:superhero, :superpower_id, Superpower.all, :id, :name, {:prompt => 'Please select'}, class: 'form-control' ) %>
    </p>

    <p>
    <%= f.submit %>
    <p>
    <% end %>